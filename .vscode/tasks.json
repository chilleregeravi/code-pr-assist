{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run GitHub Agent Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "--cov=src",
                "--cov-report=term-missing",
                "--cov-fail-under=80",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/github-agent"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Database Agent Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "--cov=src",
                "--cov-report=term-missing",
                "--cov-fail-under=80",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/database-agent"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Format GitHub Agent Code",
            "type": "shell",
            "command": "black",
            "args": [
                "src/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/github-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sort GitHub Agent Imports"
            ]
        },
        {
            "label": "Sort GitHub Agent Imports",
            "type": "shell",
            "command": "isort",
            "args": [
                "src/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/github-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Format Database Agent Code",
            "type": "shell",
            "command": "black",
            "args": [
                "src/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/database-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sort Database Agent Imports"
            ]
        },
        {
            "label": "Sort Database Agent Imports",
            "type": "shell",
            "command": "isort",
            "args": [
                "src/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/database-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Lint GitHub Agent",
            "type": "shell",
            "command": "ruff",
            "args": [
                "check",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/github-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "ruff",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): (\\w\\d+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Lint Database Agent",
            "type": "shell",
            "command": "ruff",
            "args": [
                "check",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/database-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "ruff",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): (\\w\\d+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Start GitHub Agent",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "src.github_agent.main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/github-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Database Agent",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "src.database_agent.main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/database-agent"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "--cov=github-agent/src,database-agent/src",
                "--cov-report=term-missing",
                "--cov-fail-under=80",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pip install --upgrade pip && pip install -r database-agent/requirements.txt -r database-agent/requirements-dev.txt -r github-agent/requirements.txt -r github-agent/requirements-dev.txt && pip install -e database-agent/ -e github-agent/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Lint All",
            "type": "shell",
            "command": "ruff",
            "args": [
                "check",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "ruff",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): (\\w\\d+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        }
    ]
}
